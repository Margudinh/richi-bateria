{% import "../macros/fields.njk" as fields %}

{% extends "master.html" %}

{% block header %}
<link rel="stylesheet" href="/css/forms.css" />
{% endblock %}

{% block content %}
    <div class="container z-depth-3 blue-grey darken-1">
        <div class="row">
            {% if logInFailed %}
                
            {% endif %}
            <form method = "post" class = "col 12 m6 l4 blue-grey darken-1 ">
                <div class="row">
                    {{ fields.field('email', 'Correo', type = 'email', error = errors.email.msg) }}
                </div>
                <div class="row">
                    {{ fields.field('password', 'Contraseña', type = 'password', error = errors.password.msg) }}
                </div>

                <div class="row">
                    <div class="card-panel red darken-3 center" style = "padding: 0">
                        <span class = "white-text">Usuario y/o contraseña incorrectos</span>
                    </div>
                </div>

                <div class = "row">
                        
                    <div class="input-field col s12 center">
                        <button class = "btn blue-grey darken-4" type = "submit">Log In</button>
                    </div>
                </div>
                <hr>

                <div class="row">
                    <div class="input-field col s12 center">
                        <a class = "btn blue-grey darken-4" href="/register">O Crea una cuenta</a>
                    </div>
                </div>
                

            </form>
        </div> 
    </div>
{% endblock %}